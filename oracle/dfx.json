            "wasm": ".azle/cert_manager_backend/cert_manager_backend.wasm",
            "gzip": true,
            "metadata": [
                {
                    "name": "candid:service",
                    "path": "src/cert_manager_backend/index.did"
                },
                {
                    "name": "cdk:name",
                    "content": "azle"
                }
            ]
        }
    }
}
